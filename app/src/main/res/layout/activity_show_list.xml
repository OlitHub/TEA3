<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ChoixListActivity">

    <!-- Votre mise en page pour l'activitÃ© ChoixListActivity -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="382dp"
        android:layout_height="651dp" />

    <Button
        android:id="@+id/buttonNouvelItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="OK" />

    <EditText
        android:id="@+id/editTextNouvelItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/buttonNouvelItem"
        android:layout_alignParentBottom="true"
        android:hint="Nouvel Item"
        />

</RelativeLayout>
